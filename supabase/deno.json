{
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  },
  "imports": {
    "std/": "https://deno.land/std@0.208.0/"
  },
  "include": ["functions/"],
  "test": {
    "include": ["functions/**/*.test.ts"]
  },
  "tasks": {
    "test": "deno test --allow-all"
  }
}
